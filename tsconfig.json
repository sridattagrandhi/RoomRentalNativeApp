{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "firebase/auth": [
        "./node_modules/firebase/node_modules/@firebase/auth/dist/index.rn.d.ts"
      ],
      "@firebase/auth": [
        "./node_modules/firebase/node_modules/@firebase/auth/dist/index.rn.d.ts"
      ]
    }
  },
  "ignoreDeprecations": "6.0",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "backend/babel.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
